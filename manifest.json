{
  "name": "IUT Average Mark Calculator",
  "version": "4.0.0",
  "manifest_version": 3,
  "description": "Calcule vos moyennes sur le site de l'IUT (+ d'autres trucs).",
  "content_scripts": [
    {
      "matches": ["https://intranet.iut.u-bordeaux.fr/notes"],
      "js": ["content_legacy.js"]
    },
    {
      "matches": ["https://notes.iut.u-bordeaux.fr/"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_icon": "icon.png",
    "default_title": "Cliquez pour ouvrir la page de notes"
  },
  "permissions": ["tabs"],
  "background": {
    "service_worker": "background.js"
  }
}
